{
  "name": "assistant-basic-starter",
  "version": "0.1.0",
  "description": "An application that demonstrates the Watson Assistant service in a simple chat interface simulating a cognitive car dashboard.",
  "private": true,
  "engines": {
    "node": ">=8.0"
  },
  "config": {
    "entrypoint": "server/server.js"
  },
  "scripts": {
    "start": "node server/server.js",
    "debug": "node --inspect=0.0.0.0:9229 $npm_package_config_entrypoint",
    "debug:brk": "node --inspect-brk=0.0.0.0:9229 $npm_package_config_entrypoint",
    "debug:legacy": "node --debug=0.0.0.0:5858 $npm_package_config_entrypoint",
    "test": "nyc mocha --exit",
    "dev": "nodemon $npm_package_config_entrypoint"
  },
  "nodemonConfig": {
    "env": {
      "NODE_HEAPDUMP_OPTIONS": "nosignal"
    }
  },
  "dependencies": {
    "appmetrics-dash": "^4.1.0",
    "appmetrics-prometheus": "^2.0.0",
    "appmetrics-zipkin": "^1.1.1",
    "body-parser": "^1.18.3",
    "express": "~4.16.4",
    "log4js": "^4.0.2",
    "ibm-cloud-env": "^0",
    "watson-developer-cloud": "^3.18.0"
  },
  "devDependencies": {
    "nodemon": "^1.12.1",
    "chai": "^4.2.0",
    "mocha": "^6.0.0",
    "nyc": "^13.3.0"
  },
  "author": "IBM Corp.",
  "license": "Apache-2.0"
}
